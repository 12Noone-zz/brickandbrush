<div id="new-post">
	<%= form_for @post2 do |f| %>
	<div id="map-container">
		<div id="map"></div><br>
	</div>

	<%= f.text_field :title, :placeholder => 'Title' %><br>

	<div><%= f.select :location, Post::LOCATIONS %></div><br>



			<%= f.label :image %>
		<!-- <%= f.file_field :image %> <br> -->
		<div class="file-field">
		<input class="file-path" type="text" placeholder="Add image" id="image-hover"/>
		<input type="file" name="post2[image]"/>
		</div>

	<input type="hidden" name="post2[map]" id="latlngfield">
		<input type="submit" name="commit" id="submitbutton" value="Submit Data">
<% end %>
</div>

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script>
$(document).ready(function() {
	$('select').material_select();
});
</script>
